const AbstractManager = require("./AbstractManager");

class UserManager extends AbstractManager {
  constructor() {
    super({ table: "user" });
  }

  insert(user) {
    return this.database.query(
      `insert into ${this.table} 
      (username, email, hashedpassword, is_admin) values (?, ?, ?, ?)`,
      [
        user.username,
        user.email,
        user.hashedpassword,
        user.is_admin,
      ]
    );
  }

  update(user) {
    return this.database.query(
      `update ${this.table} set username = ?, email = ?, hashedpassword = ?, is_admin = ? where id = ?`,
      [
        user.username,
        user.email,
        user.hashedpassword,
        user.is_admin,
        user.id
      ]
    );
  }
}

module.exports = UserManager;
